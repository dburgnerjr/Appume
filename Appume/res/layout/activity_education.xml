<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#D1EEEE"
    tools:context=".Appume" >

    <ImageView
        android:id="@+id/imgBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/appume_banner" />
    
    <TextView
        android:id="@+id/education_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBanner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Education"
        android:textSize="20sp"
        android:textColor="#454545" />

    <TextView
        android:id="@+id/education_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/education_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Master of Science in Computer Science	(December 2010)"
        android:textSize="14sp"
        android:textColor="#454545" />

    <TextView
        android:id="@+id/education_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/education_1"
        android:layout_below="@+id/education_1"
        android:text="Norfolk State University GPA:  3.93"
        android:textSize="14sp"
        android:textColor="#454545" />

    <TextView
        android:id="@+id/education_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/education_2"
        android:layout_centerVertical="true"
        android:text="Bachelor of Science in Computer Science"
        android:textSize="14sp"
        android:textColor="#454545" />
    
    <TextView
        android:id="@+id/education_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/education_3"
        android:layout_below="@+id/education_3"
        android:text="East Tennessee State University GPA:  3.3"
        android:textSize="14sp"
        android:textColor="#454545" />

</RelativeLayout>