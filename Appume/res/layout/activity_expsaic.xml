<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1EEEE"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ExpSAIC" >

    <ImageView
      	android:id="@+id/imgBanner"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:src="@drawable/appume_banner" />
 
	<ScrollView
	    android:id="@+id/svSAIC"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/imgBanner"
	    android:background="#D1EEEE" >

    	<RelativeLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" >
        
	        <TextView
	            android:id="@+id/expsaic_header"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="32dp"
			    android:text="Software Engineer\t\t\t\t2012-2013"
	            android:textSize="16sp"
	            android:textStyle="bold" />
	
	        <TextView
	            android:id="@+id/expsaic_comploc"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/expsaic_header"
	            android:text="SAIC\t\t\t\t\tSuffolk, VA"
	            android:textSize="16sp" />
	    
	        <TextView
	            android:id="@+id/expsaic_desc_1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/expsaic_comploc"
	            android:text="*  Developed modules for financial and management information system application used in the development, execution and management of a $140M+ joint training budget for the Department of Defense"
	            android:textSize="16sp" />
	
			<TextView
	            android:id="@+id/expsaic_desc_2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/expsaic_desc_1"
	            android:text="*  Utilized Excel templates to generate reports using Windward Reports as part of migration to a web application"
	            android:textSize="16sp" />
			
			<TextView
	            android:id="@+id/expsaic_desc_3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/expsaic_desc_2"
	            android:text="*  Implemented designs of interfaces based on requirements provided using Java for the web presentation layer and Oracle database to store the data provided by the users that involved design of tables and SQL queries constructed from desktop application"
	            android:textSize="16sp" />
			
			<TextView
	            android:id="@+id/expsaic_desc_4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/expsaic_desc_3"
	            android:text="*  Provided technical support to end users regarding system issues resulting in reduced downtime"
	            android:textSize="16sp" />
			
			<TextView
	            android:id="@+id/expsaic_desc_5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/expsaic_desc_4"
	            android:text="* Skills/Technologies Used: Java, Java Server Pages, Eclipse, SQL, Oracle, Hibernate, J2EE, Apache Tomcat, Windward Reports, Javascript"
	            android:textSize="16sp" />
			
			<View 
			    android:id="@+id/filler"
			    android:layout_width="wrap_content"
			    android:layout_height="100dp"
	            android:layout_below="@+id/expsaic_desc_5" />	            

		</RelativeLayout>
	</ScrollView>

	<LinearLayout
        android:id="@+id/llPrevNext"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_above="@+id/llExperienceMainMenu"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_weight="0.5"
            android:onClick="prevPage"
            android:text="@string/cdiMarineCompany"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#D1EEEE"
            android:textColor="#454545" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_weight="0.5"
            android:onClick="nextPage"
            android:text="@string/truestone"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#D1EEEE"
            android:textColor="#454545" />
    </LinearLayout>

	<LinearLayout
        android:id="@+id/llExperienceMainMenu"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnExperience"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_weight="0.5"
            android:onClick="experienceMenu"
            android:text="@string/experience"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#D1EEEE"
            android:textColor="#454545" />

        <Button
            android:id="@+id/btnMainMenu"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_weight="0.5"
            android:onClick="mainMenu"
            android:text="@string/mainMenu"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#D1EEEE"
            android:textColor="#454545" />
    </LinearLayout>
	
</RelativeLayout>
