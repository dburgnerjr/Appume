<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#D1EEEE"
    tools:context=".Appume" >

    <ImageView
      	android:id="@+id/imgBanner"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:src="@drawable/appume_banner" />
 
    <TextView
	    android:id="@+id/rec_frankbird_header"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/imgBanner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
		android:text="Frank M. Bird"
	    android:textSize="20sp" />

	<TextView
        android:id="@+id/rec_frankbird_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rec_frankbird_header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="Daniel is a very skilled developer.  He was brought in to help maintain/upgrade a system written by other programmers.  The system code was complex and difficult to follow.  He quickly learned the system logic and was able to make meaningful contributions.  I would recommend him without reservation."
        android:textSize="14sp" />
</RelativeLayout>