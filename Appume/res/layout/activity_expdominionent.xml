<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1EEEE"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ExpDominionEnt" >

    <ImageView
      	android:id="@+id/imgBanner"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:src="@drawable/appume_banner" />
 
	<ScrollView
	    android:id="@+id/svDominionEnterprises"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_above="@+id/llPrevNext"
	    android:layout_below="@+id/imgBanner"
	    android:background="#D1EEEE" >

    	<RelativeLayout
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" >
        
        <TextView
            android:id="@+id/expdominionent_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
		    android:text="Software Engineer\t\t\t\t2014-2015"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expdominionent_comploc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expdominionent_header"
            android:text="Dominion Enterprises\t\t\tNorfolk, VA"
            android:textSize="16sp" />
    
        <TextView
            android:id="@+id/expdominionent_desc_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expdominionent_comploc"
            android:text="* Collaborated with the engineering team to develop the infrastructure that supports exciting new products across multiple platforms and devices."
            android:textSize="16sp" />

		<TextView
            android:id="@+id/expdominionent_desc_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expdominionent_desc_1"
            android:text="* Contributed to the continued development and maintenance of multiple high-traffic, high availability web sites, mobile sites, and mobile applications."
            android:textSize="16sp" />
		
		<TextView
            android:id="@+id/expdominionent_desc_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expdominionent_desc_2"
            android:text="* Contributed to systems and applications which process, transform and generate data from and for many partners on a daily basis."
            android:textSize="16sp" />
		
		<TextView
            android:id="@+id/expdominionent_desc_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expdominionent_desc_3"
            android:text="* Mentored a team of college students that developed a mobile app during a company-sponsored hackathon."
            android:textSize="16sp" />	
            
		<TextView
            android:id="@+id/expdominionent_desc_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expdominionent_desc_4"
            android:text="* Skills/Technologies Used:  PHP, SQL, Linux, Apache Tomcat, MySQL, GitHub, Zend, MongoDB, Lucene Solr, Oracle, Javascript, JQuery, Javascript Object Notation (JSON), NetBeans, Eclipse"
            android:textSize="16sp" />

		</RelativeLayout>
	</ScrollView>
	
	<LinearLayout
        android:id="@+id/llPrevNext"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_above="@+id/llExperienceMainMenu"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnPrev"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_weight="0.5"
            android:onClick="prevPage"
            android:text="@string/xcelerateSolutions"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#D1EEEE"
            android:textColor="#454545" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_weight="0.5"
            android:onClick="nextPage"
            android:text="@string/cdiMarineCompany"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#D1EEEE"
            android:textColor="#454545" />
    </LinearLayout>

	<LinearLayout
        android:id="@+id/llExperienceMainMenu"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnExperience"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_weight="0.5"
            android:onClick="experienceMenu"
            android:text="@string/experience"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#D1EEEE"
            android:textColor="#454545" />

        <Button
            android:id="@+id/btnMainMenu"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:layout_weight="0.5"
            android:onClick="mainMenu"
            android:text="@string/mainMenu"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="#D1EEEE"
            android:textColor="#454545" />
    </LinearLayout>
	
</RelativeLayout>
