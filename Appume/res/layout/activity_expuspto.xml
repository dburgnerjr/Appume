<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#D1EEEE"
    tools:context=".Appume" >

    <ImageView
      	android:id="@+id/imgBanner"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:src="@drawable/appume_banner" />
 
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/imgBanner"
	    android:background="#D1EEEE" >

    	<RelativeLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content" >
  
        <TextView
            android:id="@+id/expuspto_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:layout_marginTop="32dp"
		    android:text="Patent Examiner\t\t\t\t2011"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/expuspto_comploc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expuspto_header"
            android:text="United States Patent and Trademark Office\nAlexandria, VA"
            android:textSize="16sp" />
    
        <TextView
            android:id="@+id/expuspto_desc_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expuspto_comploc"
            android:text="*  Reviewed patent applications to determine compliance with Federal law"
            android:textSize="16sp" />

		<TextView
            android:id="@+id/expuspto_desc_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expuspto_desc_1"
            android:text="*  Researched relevant technologies to apply references to the claimed invention"
            android:textSize="16sp" />
		
		<TextView
            android:id="@+id/expuspto_desc_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expuspto_desc_2"
            android:text="*  Communicated findings and decisions to patent practitioners and/or inventors"
            android:textSize="16sp" />
		
    	</RelativeLayout>
	</ScrollView>
</RelativeLayout>
